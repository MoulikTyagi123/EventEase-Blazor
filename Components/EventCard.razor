@using EventEaseApp.Models

<div class="event-card">
    <div class="event-card-header">
        <h3 class="event-title">@Event?.Name</h3>
    </div>
    <div class="event-card-body">
        <div class="event-detail">
            <span class="detail-label">ğŸ“… Date:</span>
            <span class="detail-value">@Event?.Date.ToString("MMMM dd, yyyy")</span>
        </div>
        <div class="event-detail">
            <span class="detail-label">ğŸ“ Location:</span>
            <span class="detail-value">@Event?.Location</span>
        </div>
        <div class="event-detail">
            <span class="detail-label">ğŸ‘¥ Capacity:</span>
            <span class="detail-value">@Event?.RegisteredCount / @Event?.Capacity</span>
        </div>
    </div>
    <div class="event-card-footer">
        <button class="btn btn-primary" @onclick="OnViewDetails">View Details</button>
        <button class="btn btn-success" @onclick="OnRegister">Register</button>
    </div>
</div>

@code {
    [Parameter]
    public Event? Event { get; set; }

    [Parameter]
    public EventCallback<int> OnDetailsClick { get; set; }

    [Parameter]
    public EventCallback<int> OnRegisterClick { get; set; }

    private async Task OnViewDetails()
    {
        if (Event?.Id > 0)
        {
            await OnDetailsClick.InvokeAsync(Event.Id);
        }
    }

    private async Task OnRegister()
    {
        if (Event?.Id > 0)
        {
            await OnRegisterClick.InvokeAsync(Event.Id);
        }
    }
}